<script>
document.addEventListener('DOMContentLoaded', (event) => {
  // Particle.js initialization
  particlesJS('particles-js', {
    particles: {
      number: { value: 80, density: { enable: true, value_area: 800 } },
      color: { value: "#ffffff" },
      shape: { type: "circle" },
      opacity: { value: 0.5, random: true },
      size: { value: 3, random: true },
      move: { enable: true, speed: 2, direction: "none", random: true, out_mode: "out" }
    }
  });

  // Enhanced 3D tilt effect for brand showcase
  const brandShowcase = document.querySelector('.brand-showcase > div');
  brandShowcase.addEventListener('mousemove', (e) => {
    const { left, top, width, height } = brandShowcase.getBoundingClientRect();
    const x = (e.clientX - left) / width - 0.5;
    const y = (e.clientY - top) / height - 0.5;
    
    gsap.to(brandShowcase, {
      rotationY: x * 20,
      rotationX: -y * 20,
      transformPerspective: 1000,
      duration: 0.5,
      ease: 'power2.out'
    });
  });

  brandShowcase.addEventListener('mouseleave', () => {
    gsap.to(brandShowcase, {
      rotationY: 0,
      rotationX: 0,
      duration: 0.5,
      ease: 'power2.out'
    });
  });

  // Newsletter form submission
  document.querySelector('.newsletter-form').addEventListener('submit', (e) => {
    e.preventDefault();
    const button = e.target.querySelector('button[type="submit"]');
    button.innerHTML = '<i class="fas fa-check text-3xl"></i>';
    button.classList.add('bg-green-500', 'text-white');
    setTimeout(() => {
      button.innerHTML = 'Join Now';
      button.classList.remove('bg-green-500', 'text-white');
    }, 2000);
  });

  // Social media follower count animation
  document.querySelectorAll('[data-followers]').forEach(icon => {
    icon.addEventListener('mouseenter', () => {
      const followers = icon.getAttribute('data-followers');
      let count = 0;
      const interval = setInterval(() => {
        count += Math.ceil(parseInt(followers) / 20);
        if (count >= parseInt(followers)) {
          clearInterval(interval);
          count = followers;
        }
        icon.querySelector('span').textContent = count + (count >= 1000 ? 'K' : '');
      }, 30);
    });
  });

  // Smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      document.querySelector(this.getAttribute('href')).scrollIntoView({
        behavior: 'smooth'
      });
    });
  });

  // Floating button hover effect
  document.querySelectorAll('.fixed button').forEach(btn => {
    btn.addEventListener('mouseenter', () => {
      btn.classList.add('animate-pulse');
    });
    btn.addEventListener('mouseleave', () => {
      btn.classList.remove('animate-pulse');
    });
  });
});
</script>
